<h1>Listing items</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Title</th>
    <th>Description</th>
    <th>Warehouse section</th>
    <th>Date recieved</th>
    <th>Date given</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.category %></td>
    <td><%=h item.title %></td>
    <td><%=h item.description %></td>
    <td><%=h item.warehouse_section %></td>
    <td><%=h item.date_recieved %></td>
    <td><%=h item.date_given %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>