%h3
  Create New Recipient
%div.left_half
  - @recipient = @the_thing
  - form_for(@recipient, :url => {:action => "create"}, :html => {:method => :post}) do |f|
    %fieldset
      %table
        = render :partial => "form", :locals => {:f => f}
      = f.submit "Create"
      |
      = link_to 'Cancel', recipients_path
%div.right_half
  = image_tag "winnipeg_neighborhood_sections.gif", :border => "0", :width => "420", :height => "457", :usemap => "#Map", :alt => "Map of Neighbourhood Clusters"

