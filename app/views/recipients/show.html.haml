%div.left_half
  %div.boxtitle
    - @recipient = @the_thing
    = "Recipient: #{@recipient.name}"
  %div.boxcontent
    %ul.show_list
      = show_field(@recipient.name, 'Name')
      = show_field("#{@recipient.phone_primary} (primary) " + " / #{@recipient.phone_secondary} (secondary)", 'Phone Numbers')
      = show_field(@recipient.health_care_number, 'Health Care #')
      = show_field(@recipient.status, 'Status')
      = show_field(@recipient.city_section, 'City Section')
      = show_field(@recipient.street_1, 'Street')
      = show_field(@recipient.buzzer_number, 'Buzzer Number')
      = show_field(@recipient.level, 'Level')
      = show_field(@recipient.elevator, 'Elevator')
      = show_field(@recipient.directions, 'Directions')
      = show_field(@recipient.move_in_date.andand.strftime("%b %d, %y"), 'Move In Date')
      = show_field(@recipient.previous_address, 'Previous Address')
      = show_field(@recipient.case_worker_id, 'Case Worker')
      = show_field(@recipient.bedrooms, 'Bedrooms')
      = show_field(@recipient.number_of_adults, 'Adults')
      = show_field(@recipient.number_of_children, 'Children')
      = show_field(@recipient.additional_information, 'Additional Info')
      = show_field(@recipient.work_school_schedule, 'Work/School Schedule')
      = show_field(@recipient.donation, 'Donation ($)')
      = show_field(@recipient.comments, 'Comments')
      = show_field(@recipient.intake_date.andand.strftime("%b %d, %y %H:%M"), 'Intake Date')
      = show_field(@recipient.referred_by, 'Referred By')
        
  = link_to 'Edit', edit_recipient_path(@recipient)
  |
  = link_to 'Index', recipients_path

%div.right_half
  %table
    %tr
      %td
        -#:popup => ["New Delivery", "status=0,location=0,toolbar=0,menubar=0,scrollbars=1,width=1050,resizable=1,directories=0"]
        -#:target => '_blank
        = button_to "Schedule New Delivery", new_recipient_delivery_path(@recipient), {:method => :get}
      %td
        = image_tag "deliver.png", :border => "0", :alt => "DeliverySheet", :size => "20x20"
    
  %br
  %br
  = render "deliveries/deliveries"      
