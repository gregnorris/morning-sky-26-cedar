%div.left_half
  %div.boxtitle
    - @donor = @the_thing
    = "Donor: #{@donor.full_name}"
  %div.boxcontent
    %ul.show_list
      = show_field(@donor.full_name, 'Name')
      = show_field(@donor.phones_formatted, 'Phone Numbers')
      = show_field(@donor.email, 'Email')
      = show_field(ApplicationHelper::CITY_SECTIONS[@donor.city_section], 'City Section')
      = show_field(@donor.street_1, 'Street')
      = show_field(@donor.buzzer_number, 'Buzzer Number')
      = show_field(@donor.level, 'Level')
      = show_field(@donor.elevator, 'Elevator')
      = show_field(@donor.directions, 'Directions')
      = show_field(datetime_formatted(@donor.scheduled_pickup_time), 'Scheduled Pickup Time')
      = show_field(datetime_formatted(@donor.possible_future_pickup_time), 'Possible Future Pickup')
      = show_field("$#{@donor.donation_amount}", 'Donation')
      %br
      = show_field(datetime_formatted(@donor.created_at), 'Created At')
      = show_field(datetime_formatted(@donor.updated_at), 'Updated At')
        
  = link_to 'Edit', edit_donor_path(@donor)
  |
  = link_to 'Index', donors_path
